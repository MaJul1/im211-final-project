@{
    ViewData["Title"] = "Home Page";
}

@model HomeViewModel

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Number of students registered</th>
                <th><a asp-controller="Student" asp-action="Index">@Model.NumberOfStudentRegistered</a></th>
            </tr>
            <tr>
                <th>Number of skills registered</th>
                <th>@Model.NumberOfSkillsRegistered</th>
            </tr>
            <tr>
                <th>Number of courses registered</th>
                <th>@Model.NumberOfCoursesRegistered</th>
            </tr>
        </tbody>
    </table>
</div>
