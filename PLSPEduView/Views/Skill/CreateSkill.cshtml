@model SkillWriteModel
@{
    ViewData["Title"] = "Create Skill Page";
}

<div class="text-center">
    <h1>Create Skill</h1>
    <hr>
</div>

<form asp-action="CreateSkill" asp-controller="Skill" method="post">
    <div class="from-group mb-2">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" type="text"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <input type="submit" class="btn btn-primary btn-wide" value="Submit">
        <a class="btn btn-secondary btn-wide" asp-action="Index">Cancel</a>
    </div>
</form>
