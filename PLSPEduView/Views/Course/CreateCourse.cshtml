@model CourseWriteModel
@{
    ViewData["Title"] = "Create Course Page";
}

<div>
    <h1 class="text-center">Create Course Page</h1>
    <hr>
</div>

<form asp-action="CreateCourse" asp-controller="Course" method="post">
    <div class="from-group mb-2">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" type="text" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="from-group mb-2">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" type="text" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="from-group mb-2">
        <label asp-for="Units" class="control-label"></label>
        <input asp-for="Units" class="form-control" type="number" />
        <span asp-validation-for="Units" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <input type="submit" class="btn btn-primary btn-wide" value="Submit">
        <a class="btn btn-secondary btn-wide" asp-action="Index">Cancel</a>
    </div>
    <div>
        @{
            if (ViewData["Error"] is string error)
            {
                <p>@error</p>
            }
        }
    </div>
</form>
