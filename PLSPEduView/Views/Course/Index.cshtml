@model CourseViewModel
@{
    ViewData["Title"] = "Course Page";
}

<div>
    <h1 class="text-center">Course Page</h1>
    <hr>
</div>

<div>
    <div class="d-flex mb-2 justify-content-between">
        <a class="btn btn-primary w-100 text-center" asp-action="CreateCourse">+ Create Course</a>
    </div>
    <table class="table table-bordered table-sm table-hover table-striped text-center">
        <thead>
            <tr>
                <th><a href="#" onclick="sortTable(0)">Code</a></th>
                <th><a href="#" onclick="sortTable(1)">Description</a></th>
                <th><a href="#" onclick="sortTable(2)">Student Count</a></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var c in @Model.Courses)
                {
                    <tr onclick="GoToCourseView('@c.Id')">
                        <td>@c.CourseCode</td>
                        <td>@c.CourseDescription</td>
                        <td>@c.GetNumberOfStudentsEnrolled()</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script>
    function GoToCourseView(courseId) {
        window.location.href = '@Url.Action("ViewCourse", "Course")' + '?courseId=' + courseId;
    }
</script>